{
   "name": "Microsoft Learn URL Appender - MV3",
   "description": "Quickly copy a Microsoft Learn URL, with your desired tracking parameter appended.",
   "manifest_version": 3,
   "version": "1.0",
   "background": {
      "service_worker": "background.js",
      "type": "module"
   },
   "permissions": [ "activeTab", "tabs", "clipboardWrite", "contextMenus", "storage", "scripting" ],
   "host_permissions": ["*://*.docs.microsoft.com/*", "*://*.learn.microsoft.com/*" ],
   "action": {
      "default_title": "Copy to clipboard",
      "default_icons": {
         "16": "icon/learnAppenderIcon16.png",
         "32": "icon/learnAppenderIcon32.png",
         "48": "icon/learnAppenderIcon48.png",
         "128": "icon/learnAppenderIcon128.png"
      }
   },
   "icons": {
      "16": "icon/learnAppenderIcon16.png",
      "32": "icon/learnAppenderIcon32.png",
      "48": "icon/learnAppenderIcon48.png",
      "128": "icon/learnAppenderIcon128.png"
   },
   "options_page": "options.html"
}
